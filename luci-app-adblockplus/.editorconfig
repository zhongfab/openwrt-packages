# Editor configuration, see http://editorconfig.org
# Definitions in here follow https://adblockplus.org/coding-style
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# The next line is not editorconfig spec, but is used by others, e.g. Prettier
max_line_length = 0
trim_trailing_whitespace = false
